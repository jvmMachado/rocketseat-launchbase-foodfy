{% extends "layout.njk" %}

{% block content %}

  <img class="recipe-image" src="{{recipe.image}}" alt="{{recipe.title}}">
  <h1 class="recipe-title">{{recipe.title}}</h1>
  <p class="recipe-author">por
    {{recipe.author}}</p>

  <h2 class="recipe-infos">Ingredientes</h2>
  <button class="button-hide">ESCONDER</button>

  <ul class="recipe-info-to-hide">
    {% for ingredient in recipe.ingredients %}
      <li>{{ingredient}}</li>
    {% endfor %}
  </ul>

  <h2 class="recipe-infos">Modo de preparo</h2>
  <button class="button-hide">ESCONDER</button>
  <p class="recipe-info-to-hide">{{recipe.preparation}}</p>

  <h2 class="recipe-infos">Informações adicionais</h2>
  <button class="button-hide">ESCONDER</button>
  <p class="recipe-info-to-hide">{{recipe.information}}</p>

{% endblock %}